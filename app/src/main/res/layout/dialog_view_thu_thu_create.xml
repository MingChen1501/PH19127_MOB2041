<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFD600"
            android:gravity="center"
            android:text="Tạo mới thủ thư"
            android:textSize="35sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Tên thủ thư"
            android:textSize="24sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/et_dialogThemThuThu_tenThuThu"
            android:hint="Tên thủ thư"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Tên đăng nhập"
            android:textSize="24sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/et_dialogThemThuThu_maThuThu"
            android:hint="Nhập tên đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Mật khẩu"
            android:textSize="24sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/et_dialogThemThuThu_matKhau"
            android:hint="Nhập mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Số điện thoại"
            android:textSize="24sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/et_dialogThemThuThu_soDienThoai"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialogThemThuThu_create"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FF6D00"
                android:text="THÊM MỚI" />

            <Button
                android:id="@+id/btn_dialogThemThuThu_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FF6D00"
                android:text="QUAY LẠI" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
