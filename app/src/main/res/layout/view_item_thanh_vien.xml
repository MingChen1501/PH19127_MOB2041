<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:contentPadding="10dp"
    android:layout_margin="8dp"
    app:cardElevation="20dp"
    android:id="@+id/cardView_ThanhVienFragment_ThanhVienViewItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_ThanhVienFragment_ThanhVienViewItem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_emoji_people_24"/>

        <LinearLayout
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ThanhVienFragment_ThanhVienViewItem_maThanhVien"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mã thành viên"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ThanhVienFragment_ThanhVienViewItem_tenThanhVien"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Tên thành viên"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_ThanhVienFragment_ThanhVienViewItem_soDienThoai"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="soDienThoai"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textStyle="italic" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_ThanhVienFragment_ThanhVienViewItem_deleteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_baseline_delete_24" />
    </LinearLayout>

</androidx.cardview.widget.CardView>