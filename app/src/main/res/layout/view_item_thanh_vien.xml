<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:contentPadding="10dp"
    android:layout_margin="8dp"
    app:cardElevation="20dp"
    android:id="@+id/cardViewThanhVien">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_view_item_thanh_vien_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_emoji_people_24"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_view_item_thanh_vien_maThanhVien"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mã thành viên"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_view_item_thanh_vien_tenThanhVien"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Tên thành viên"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_view_item_thanh_vien_soDienThoai"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="soDienThoai"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_view_item_thanh_vien_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_delete_24"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>