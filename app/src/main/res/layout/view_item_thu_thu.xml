<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:contentPadding="10dp"
    android:layout_margin="8dp"
    app:cardElevation="20dp"
    android:id="@+id/cardView_ThuThuFragment_ThuThuViewItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_ThuThuFragment_ThuThuViewItem_Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_library_books_24"/>

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ThuThuFragment_ThuThuViewItem_maThuThu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mã thủ thư"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_ThuThuFragment_ThuThuViewItem_tenThuThu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tên thủ thư"
                android:gravity="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_ThuThuFragment_ThuThuViewItem_soDienThoai"
                android:layout_width="150dp"
                android:gravity="center"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:text="Số điên thoại"
                android:textSize="15sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_ThuThuFragment_ThuThuViewItem_deleteItem"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_delete_24"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>