<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:contentPadding="10dp"
    android:layout_margin="8dp"
    app:cardElevation="20dp"
    android:id="@+id/cardView_SachFragment_viewItemSach">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_SachFragment_viewItemSach_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_library_books_24"/>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_SachFragment_viewItemSach_maSach"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="mã sách"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_SachFragment_viewItemSach_tieuDe"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="tiêu đề sách"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_SachFragment_viewItemSach_tenLoai"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="tên loại sách"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_SachFragment_viewItemSach_tacGia"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="tác giả sách"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_SachFragment_viewItemSach_donGia"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="đơn giá"
                android:gravity="center"
                android:textSize="17sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_SachFragment_viewItemSach_deleteItem"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_delete_24"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>